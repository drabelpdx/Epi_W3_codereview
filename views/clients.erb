<h3> Here are all the Clients at KiKi's</h3>


 <% if @clients.any?() %>
   <p>Clients</p>
     <ul>
       <% @clients.each do |client| %>
         <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
       <% end %>
      </ul>

      <% else %>
      <p>There are no clients added yet.</p>
      <% end %>

      <p>Add a Client to the database</p>

      <form action='/clients' method='post'>
        <label for='name'> Client's name:</label>
        <input id='name' name='name' type='text'>

        <button type='submit'>Add Client</button>
      </form>

      <div class ="container">
        <a href="/">Return to Main Page</a>
        <a href="/stylists">View the Stylist's page</a>
      </div>
