<h1><%= @stylist.name() %></h1>

<form action="/stylists/<%= @stylist.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <input id='name' name='name' type='text'>

  <button type="submit">Edit Name</button>
</form>

<br>
<h3>Here are all <%= @stylist.name() %> Client's:</h3>

<% if @stylist.clients().any?() %>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><%= client.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p><%= @stylist.name() %> has no clients yet!</p>
<% end %>
<br><br>
<div class ="container">
  <a href="/">Return to Main Page</a><br>
  <a href="/stylists">View All Stylist</a><br>
  <a href="/clients">View All Clients</a>
</div>

<br><br>
<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Stylist</button>
</form>
